{
  "editor.tabSize": 2,
  "editor.fontFamily": "Iosevka Nerd Font, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "vim.leader": "<space>",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "c", "f"],
      "commands": ["editor.action.formatDocument"]
    },
    {
      "before": ["<leader>", "f", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "z"],
      "commands": ["workbench.action.toggleZenMode"],
      "when": "editorTextFocus"
    },
    {
      "before": ["K"],
      "commands": ["editor.action.showHover"],
      "when": "editorTextFocus"
    },
    {
      "before": ["<leader>", "c", "r"],
      "commands": ["editor.action.rename"],
      "when": "editorTextFocus"
    },
    {
      "before": ["g", "r"],
      "commands": ["editor.action.goToReferences"],
      "when": "editorTextFocus"
    }
  ],
  "editor.lineNumbers": "relative",
  "vim.easymotion": true,
  "windsurf.marketplaceExtensionGalleryServiceURL": "https://marketplace.visualstudio.com/_apis/public/gallery",
  "windsurf.marketplaceGalleryItemURL": "https://marketplace.visualstudio.com/items",
  "git.autofetch": true
}
